{% extends '@EasyAdmin/page/content.html.twig' %}

{% block content_title %}
    <h1>Santons Script Tactics - Dashboard</h1>
{% endblock %}

{% block main %}
    <div class="row">
        <div class="col-md-12">
            <div class="card">
                <div class="card-header">
                    <h3 class="card-title">
                        <i class="fas fa-gamepad"></i>
                        Bienvenue dans SST Admin
                    </h3>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-4">
                            <div class="info-box">
                                <span class="info-box-icon bg-info">
                                    <i class="fas fa-users"></i>
                                </span>
                                <div class="info-box-content">
                                    <span class="info-box-text">Joueurs</span>
                                    <span class="info-box-number">
                                        <a href="{{ ea_url().setController('App\\Controller\\Admin\\PlayerCrudController') }}">
                                            Gérer les joueurs
                                        </a>
                                    </span>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="info-box">
                                <span class="info-box-icon bg-success">
                                    <i class="fas fa-chess-knight"></i>
                                </span>
                                <div class="info-box-content">
                                    <span class="info-box-text">Characters</span>
                                    <span class="info-box-number">
                                        <a href="{{ ea_url().setController('App\\Controller\\Admin\\CharacterTemplateCrudController') }}">
                                            Gérer les templates
                                        </a>
                                    </span>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="info-box">
                                <span class="info-box-icon bg-warning">
                                    <i class="fas fa-trophy"></i>
                                </span>
                                <div class="info-box-content">
                                    <span class="info-box-text">Matches</span>
                                    <span class="info-box-number">
                                        <a href="{{ ea_url().setController('App\\Controller\\Admin\\SSTMatchCrudController') }}">
                                            Voir les matchs
                                        </a>
                                    </span>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}